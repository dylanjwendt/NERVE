{
  "name": "nerve-server",
  "version": "0.1.0",
  "description": "Handles matchmaking and turns over client actions to the engine",
  "main": "build/exports.js",
  "private": true,
  "scripts": {
    "start": "node build/index.js",
    "serve": "node build/index.js",
    "test": "jest",
    "coverage": "jest --coverage",
    "build": "tsc --listEmittedFiles",
    "build:watch": "tsc --listEmittedFiles -w",
    "prod": "npm run build && npm run start",
    "lint": "eslint --ext .js,.ts ./src ./tests --no-error-on-unmatched-pattern",
    "lint:fix": "eslint --ext .js,.ts --fix ./src ./tests --no-error-on-unmatched-pattern",
    "debug": "tsc && node --nolazy --inspect-brk=5858 build/index.js",
    "clean": "rimraf ./build"
  },
  "keywords": [],
  "contributors": [
    "Luke Ludlow",
    "Jordan Taylor",
    "Calvin Tu",
    "Dylan Wendt"
  ],
  "license": "MIT",
  "dependencies": {
    "@colyseus/command": "^0.1.6",
    "@koa/router": "^10.0.0",
    "@tsconfig/node14": "^1.0.0",
    "colyseus": "^0.14.23",
    "colyseus.js": "^0.14.13",
    "koa": "^2.13.1",
    "koa-bodyparser": "^4.3.0",
    "koa-static": "^5.0.0",
    "nerve-demo": "file:../Demo",
    "reflect-metadata": "^0.1.13",
    "tsyringe": "^4.6.0",
    "typescript": "^4.2.2"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.13.9",
    "@colyseus/schema": "^1.0.16",
    "@shopify/jest-koa-mocks": "^3.0.4",
    "@types/jest": "^27.0.1",
    "@types/koa": "^2.13.0",
    "@types/koa__router": "^8.0.4",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-static": "^4.0.1",
    "@types/readline-sync": "^1.4.3",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-typescript": "^14.0.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-workspaces": "^0.6.2",
    "jest": "^27.1.0",
    "jest-mock-extended": "^2.0.2-beta2",
    "readline-sync": "^1.4.10",
    "rimraf": "^3.0.2",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.5"
  }
}
