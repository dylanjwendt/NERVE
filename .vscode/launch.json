    "version": "0.2.0",
    "configurations": [
        {
            "name": "debug jest tests server",
            "type": "node",
            "request": "launch",
            "runtimeArgs": [
                "--inspect-brk",
                "${workspaceRoot}/Server/node_modules/.bin/jest",
                "--runInBand",
                "--config",
                "${workspaceRoot}/Server/jest.config.js",
                "--coverage",
                "false",
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}