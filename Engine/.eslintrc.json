{
    "env": {
        "es2021": true,
        "node": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module",
        "project": "./tsconfig.eslint.json"
    },
    "extends": [
        "airbnb-typescript/base",
        "plugin:jest/recommended",
        "plugin:promise/recommended"
    ],
    "plugins": [
        "@typescript-eslint",
        "jest",
        "promise"
    ],
    "rules": {
        // Engine should be able to use console
        "no-console": "off"
    }
}
