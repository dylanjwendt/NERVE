{
    "extends": "@tsconfig/node14/tsconfig.json",
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "tests/**/*"
    ],
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
          "@nerve-common/*": ["../Common/src/*"],
          "@nerve-config": ["../nerve.config.json"]
        },
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "outDir": "build",
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": false,
        "allowJs": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "declaration": true
    }
}