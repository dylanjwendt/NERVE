{
    "env": {
        "es2021": true,
        "node": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module",
        "project": "./tsconfig.eslint.json"
    },
    "extends": [
        "airbnb-typescript/base",
        "plugin:promise/recommended"
    ],
    "plugins": [
        "@typescript-eslint",
        "promise"
    ],
    "rules": {
        "no-console": "off",
        "@typescript-eslint/lines-between-class-members": ["error", "always", { "exceptAfterSingleLine": true }]
    }
}
