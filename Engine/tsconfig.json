{
  "extends": "@tsconfig/node14/tsconfig.json",
  "include": [
    "src/**/*",
    "types/**/*"
  ],
  "exclude": [
    "tests/*"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@nerve-common/*": ["../Common/src/*"],
      "@nerve-config": ["../nerve.config.json"]
    },
    "outDir": "build",
    "declaration": true,
    "sourceMap": true,
    "resolveJsonModule": true
  },
}